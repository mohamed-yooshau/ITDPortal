# ITD Portal production environment template
# Copy to .env and fill in values

# Database
DB_USER=itdportal
DB_PASSWORD=CHANGE_ME_STRONG
DB_NAME=itdportal
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_PASSWORD=CHANGE_ME_STRONG

# Auth / JWT
JWT_SECRET=CHANGE_ME_RANDOM_64+

# Azure Entra
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
USER_REDIRECT_URI=https://itdportal.mtcc.com.mv/api/auth/callback
ADMIN_REDIRECT_URI=https://itdportal.mtcc.com.mv/api/auth/callback

# Portal URLs
FRONTEND_URL=https://itdportal.mtcc.com.mv
ADMIN_URL=https://itdportal.mtcc.com.mv/${ADMIN_PATH}
ADMIN_PATH=sudoMakeMeAdmin

# Local admin (only if local login enabled)
ADMIN_USERNAME=localadmin
ADMIN_PASSWORD=CHANGE_ME_STRONG

# First deployment bootstrap
# true = local login only (SSO disabled) until initial admin setup is complete
# set to false after configuring Azure/URLs in the admin panel
BOOTSTRAP_LOCAL_ONLY=true

# APS/Helpdesk/Status APIs
APS_TOKEN=
HELPDESK_STATUS_API_URL=
HELPDESK_STATUS_API_KEY=

# Optional: Uptime Kuma
UPTIME_KUMA_BASE_URL=
UPTIME_KUMA_API_KEY=
UPTIME_KUMA_STATUS_SLUG=
UPTIME_KUMA_WEBHOOK_TOKEN=
